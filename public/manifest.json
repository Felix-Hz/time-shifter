{
  "manifest_version": 3,
  "name": "TimeShifter",
  "version": "1.0",
  "description": "Easily convert events to your preferred timezone and save them as Google Calendar events to effortlessly share with family and friends.",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "logo.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}